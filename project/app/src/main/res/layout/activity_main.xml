<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_main"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="ГЛ"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="652dp" />

    <Button
        android:id="@+id/button_rank"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="Рейтинг"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="652dp" />

    <Button
        android:id="@+id/button_tasks"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="задания"
        android:textSize="10sp"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="652dp" />

    <Button
        android:id="@+id/button_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="профиль"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="652dp" />

    <Button
        android:id="@+id/button_notes"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="справочник"
        android:textSize="8sp"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="652dp"
        />

    <Button
        android:id="@+id/button_big"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="проверка знаний"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="563dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginHorizontal="50dp"
        android:background="#CDEDC8"
        android:scrollbarStyle="insideInset"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ежедневные задания"
                android:textAlignment="center"
                android:layout_marginVertical="15dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Button" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Button" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:text="Button" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>