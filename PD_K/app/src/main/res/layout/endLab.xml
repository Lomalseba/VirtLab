<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginTop="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lab_back_button"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:backgroundTint="#FFAAAAAA"
                android:text="<"
                android:textSize="15sp"
                android:padding="0sp" />

            <TextView
                android:id="@+id/lab_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:text="Название Лабораторной работы"
                android:textAlignment="center"
                android:padding="5sp"/>

            <Button
                android:id="@+id/lab_info"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                android:backgroundTint="#FFAAAAAA"
                android:text="V"
                android:textSize="15sp"
                android:padding="0sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/lab_content"
            android:layout_width="match_parent"
            android:layout_height="500sp"
            android:layout_weight="1"
            android:layout_marginTop="10sp"
            android:background="#D1D1D1"
            android:textSize="35sp" />

        <LinearLayout
            android:id="@+id/lab_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="20sp">

            <Button
                android:id="@+id/lab_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0000FF"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:text="Заново"
                android:padding="0sp"/>

            <Button
                android:id="@+id/lab_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#0000FF"
                android:layout_marginLeft="5sp"
                android:textSize="10sp"
                android:text="Открыть список предметов"
                android:padding="0sp"/>

            <Button
                android:id="@+id/lab_edit_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0000FF"
                android:layout_marginLeft="5sp"
                android:layout_gravity="center_vertical"
                android:textSize="10sp"
                android:text="Режим редиктирования"
                android:padding="0sp"/>

            <Button
                android:id="@+id/lab_dict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0000FF"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5sp"
                android:textSize="10sp"
                android:text="Справочник"
                android:padding="0sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>